<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.articleDashController">
   <top>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="backhomebtn" mnemonicParsing="false" onAction="#OnReturn" text="↩">
               <font>
                  <Font size="15.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="search" mnemonicParsing="false" onAction="#OnSearch" prefHeight="30.0" prefWidth="30.0" text="🔎" />
            <TextField fx:id="searcharea" prefHeight="30.0" prefWidth="200.0" promptText="Search for a article" HBox.hgrow="ALWAYS" />
            <Button fx:id="logout" alignment="CENTER_RIGHT" contentDisplay="CENTER" mnemonicParsing="false" onAction="#OnLogout" prefHeight="30.0" prefWidth="99.0" style="-fx-background-color: red;" text="Deconnection" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font size="13.0" />
               </font>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </top>
   <center>
      <VBox prefHeight="334.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="20.0">
               <children>
                  <Button id="1" fx:id="addarticle" mnemonicParsing="false" onAction="#OnAddArticle" prefHeight="31.0" prefWidth="37.0" style="-fx-background-radius: 10; -fx-background-color: green;" text="+" textFill="WHITE">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                     <font>
                        <Font size="15.0" />
                     </font></Button>
                  <Label fx:id="title" alignment="CENTER" text="Articles Created :" HBox.hgrow="ALWAYS">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
                  <Label fx:id="count" alignment="CENTER" text="0" textAlignment="CENTER">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="deletebtn" mnemonicParsing="false" onAction="#OnDelete" prefHeight="30.0" prefWidth="30.0" style="-fx-background-radius: 10; -fx-background-color: red;" text="❌" textFill="WHITE" />
                  <TextField fx:id="searcharea2" prefHeight="30.0" prefWidth="200.0" promptText="Delete Article" />
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </HBox>
            <TableView fx:id="table" style="-fx-background-color: #D3D3D3;">
              <columns>
                <TableColumn fx:id="idcol" prefWidth="75.0" text="Id" />
                <TableColumn fx:id="titlecol" prefWidth="75.0" text="Title" />
                  <TableColumn fx:id="categorycol" prefWidth="75.0" text="Category" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </center>
</BorderPane>
